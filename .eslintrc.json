{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "es6":true 
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2021
        
    },
    "rules": {
        "max-nested-callbacks": ["error", { "max": 4 }],
		"max-statements-per-line": ["error", { "max": 2 }],
        "quotes": ["error", "single"],
		"semi": ["error", "always"]
    }
}
